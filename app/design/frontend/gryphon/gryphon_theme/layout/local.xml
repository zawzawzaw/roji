<layout version="0.1.0">

<!--
One page checkout main layout
-->

    <checkout_onepage_index>
        <reference name="head">    
            <action method="removeItem"><type>skin_js</type><name>js/minified/page-default.min.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/minified/page-checkout.min.js</name></action>               
            <action method="addItem"><type>skin_js</type><name>js/miragedesign/shipping.js</name></action>
            <action method="addItem"><type>skin_css</type><name>libs/intlTelInput/intlTelInput.css</name></action>
            <action method="addItem"><type>skin_js</type><name>libs/intlTelInput/intlTelInput.min.js</name></action>
            <action method="addItem"><type>skin_js</type><name>libs/intlTelInput/utils.js</name></action>
            <action method="setForcedTitle"><title>Check Out - Roji Cha</title></action>                     
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/checkout-layout.phtml</template></action>
        </reference>
        <reference name="checkout.onepage.billing"> <!-- Change the template of billing block  -->
            <action method="setTemplate"><template>miragedesign/persistent/checkout/onepage/billing.phtml</template></action>
        </reference>
        <reference name="checkout.onepage.payment">
            <action method="setTemplate"><template>miragedesign/checkout/onepage/payment.phtml</template></action>
        </reference>
    </checkout_onepage_index>

    <checkout_onepage_paymentmethod>
        <reference name="root">
            <action method="setTemplate"><template>miragedesign/checkout/onepage/payment/methods.phtml</template></action>
        </reference>
    </checkout_onepage_paymentmethod>

    <checkout_onepage_review>
        <reference name="head">            
        </reference>
        <reference name="root">
            <action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>miragedesign/checkout/onepage/review/item.phtml</template></action>
