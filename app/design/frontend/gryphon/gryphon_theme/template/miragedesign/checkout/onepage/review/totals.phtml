<?php if ($this->getTotals()): ?>
<div id="shopping-cart-totals-table" class="review-totals">
    <?php $_colspan = $this->helper('tax')->displayCartBothPrices() ? 5 : 3; ?>
    <?php echo $this->renderTotals(null, $_colspan); ?>
    <?php echo $this->renderTotals('footer', $_colspan); ?>
    <?php if ($this->needDisplayBaseGrandtotal()):?>
    <div class="each-details total-sgd">
        <div class="a-right label" colspan="<?php echo $_colspan; ?>">
            <p><?php echo $this->helper('sales')->__('Total in SGD') ?></p>
        </div>
        <div class="a-right value">
            <p><?php echo $this->displayBaseGrandtotal() ?></p>
        </div>
    </div>
    <?php endif?>
</div>
<?php endif; ?>
